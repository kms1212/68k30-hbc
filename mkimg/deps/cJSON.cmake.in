cmake_minimum_required(VERSION 3.12)
project(cJSON-build NONE)

include (ExternalProject)

ExternalProject_Add(cJSON
    GIT_REPOSITORY  https://github.com/DaveGamble/cJSON
    GIT_TAG         "v1.7.16"
    CMAKE_ARGS      -DCMAKE_INSTALL_PREFIX:PATH=${CMAKE_BINARY_DIR}/deps/output
    PREFIX          "${CMAKE_BINARY_DIR}/deps/cJSON"
    GIT_PROGRESS    TRUE
)